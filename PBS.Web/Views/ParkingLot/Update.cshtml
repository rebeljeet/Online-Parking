@model ParkingLotViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update Parking lot details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="IsActive" type="hidden" />
            <input asp-for="IsAproved" type="hidden" />
            <input asp-for="OwnerId" type="hidden" />
            <input asp-for="AddressId" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-danger text-white">Cancel</a>
            </div>
        </form>
    </div>
</div>