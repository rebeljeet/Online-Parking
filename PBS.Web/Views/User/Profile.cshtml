@model UserViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">User Profile</h1>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-md-4">
                        Full Name
                    </dt>
                    <dd class="col-md-8">
                        @Model.FirstName @Model.LastName
                    </dd>
                    <dt class="col-md-4">
                        Email
                    </dt>
                    <dd class="col-md-8">
                        @Model.Email
                    </dd>
                    <dt class="col-md-4">
                        Contect Number
                    </dt>
                    <dd class="col-md-8">
                        @Model.ContectNumber
                    </dd>
                    <dt class="col-md-4">
                        Role
                    </dt>
                    <dd class="col-md-8">
                        @Model.RoleViewModel.Title
                    </dd>
                    <dt class="col-md-4">
                        Address
                    </dt>
                    <dd class="col-md-8">
                        @if (Model.AddressViewModel == null)
                        {
                            <span>Address not set.</span><br />
                            <a asp-action="UpdateAddress">Add</a>
                        }
                        else
                        {
                            <partial name="_Address" model="Model.AddressViewModel" />
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <div>
                    <a asp-action="Update" class="btn btn-success text-white">Update Details</a>
                    <a asp-action="UpdateAddress" class="btn btn-info text-white">Manage Address</a>
                </div>
            </div>
        </div>
    </div>
</div>