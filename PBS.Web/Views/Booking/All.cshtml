@model List<BookingViewModel>

@{
    ViewData["Title"] = "All Bookings";
}

<h3 class="mb-4">
    <b>
        @_tokenDecoder.UserName<span>'s Bookings</span>
    </b>
</h3>

@if (Model.Any ())
{
    <div class="row">
        @for (int i = 0; i < Model.Count (); i++)
        {
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title">
                            @Model[i].SlotViewModel.ParkingLotViewModel.Name<span> parking lot</span>
                        </h4>
                    </div>
                    <div class="card-body">
                        <p>
                            Amount : @Model[i].Amount INR
                        </p>
                        <p>
                            Date : @Model[i].StartDateTime.ToLongDateString()
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@Model[i].EncryptedId" class="btn btn-info">
                            View Full Details
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="card" style="padding: 10px">
        None at the moment.
    </div>
}