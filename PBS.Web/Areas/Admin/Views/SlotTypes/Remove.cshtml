@{
    ViewData["Title"] = "Remove Slot Type";
}

@section header {
    <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;&nbsp;Slot Types
}

<div class="panel">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;Delete Slot Type
        </h3>
    </div>
    <div class="panel-body">
        <p>
            Are you sure to delete this role?
        </p>
    </div>
    <div class="panel-footer">
        <form asp-action="Remove" method="post">
            <input id="id" name="id" type="hidden" value="@ViewData["Id"]" />
            <input type="submit" value="Yes" class="btn main-color-bg" />
            <a asp-action="Index" class="btn btn-danger">No</a>
        </form>
    </div>
</div>