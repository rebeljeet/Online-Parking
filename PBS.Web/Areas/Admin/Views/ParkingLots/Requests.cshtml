@model IEnumerable<ParkingLotViewModel>

@{
    ViewData["Title"] = "Requests";
}

@section header {
    <span class="glyphicon glyphicon-tasks"></span>&nbsp;&nbsp;&nbsp;Parking lot requests
}


<div class="panel">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;&nbsp;Parking lot Requests
        </h3>
    </div>
    <div class="panel-body">
        <table border="0" class="table table-hover text-center">
            <thead>
                <tr>
                    <td><b>Name</b></td>
                    <td><b>Owner Name</b></td>
                    <td><b>Number of Slots</b></td>
                    <td><b>City</b></td>
                    <td><b>Image Status</b></td>
                    <td><b>Actions</b></td>
                </tr>
            </thead>
            <tbody>
                @foreach (ParkingLotViewModel item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.OwnerViewModel.FirstName @item.OwnerViewModel.LastName</td>
                        <td>@item.SlotViewModels.Count</td>
                        <td>@item.AddressViewModel.City</td>
                        <td>
                            @(item.ParkingLotImageViewModels.Any () ? item.ParkingLotImageViewModels.Count + " image Uploaded" : "None at the moment")
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.EncryptedId" class="btn main-color-bg">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    document.getElementById("side-users").classList.remove("main-color-bg");
    document.getElementById("side-user-roles").classList.remove("main-color-bg");
    document.getElementById("side-parking-lots").classList.remove("main-color-bg");

    document.getElementById("side-parking-lot-requests").classList.add("main-color-bg");
</script>