@model UpdateRoleModel

@{
    ViewData["Title"] = "UpdateRole";
}

@section header {
    Users
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Update User Role
        </h3>
    </div>
    <div class="card-body">
        <form asp-action="UpdateRole" method="post">
            <div class="form-group">
                <input asp-for="ApiModel.UserId" type="hidden" />
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ApiModel.RoleId" class="control-label"></label>
                    <select asp-for="ApiModel.RoleId" class="form-control"
                            asp-items="@(new SelectList(Model.Roles, "Id", "Title"))">
                        <option value="-1">-- Select Role --</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </form>
    </div>
</div>

