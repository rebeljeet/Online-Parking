@{
    ViewData["Title"] = "Remove Role";
}

@section header {
    <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;&nbsp;User Roles
}

<div class="panel">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;Delete Role
        </h3>
    </div>
    <div class="panel-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <p>
            Are you sure to delete role with Id: <span>@ViewData["Id"]</span> ?
        </p>
    </div>
    <div class="panel-footer">
        <form asp-action="Delete" method="post">
            <input id="roleId" name="roleId" type="hidden" value="@ViewData["Id"]" />
            <input type="submit" value="Yes" class="btn main-color-bg" />
            <a asp-action="Index" class="btn btn-danger">No</a>
        </form>
    </div>
</div>